---
import Slide from "../components/Slide.astro";
import EmptyLayout from "../layouts/EmptyLayout.astro";
import Character from "../components/Character.astro";
import Carousel from "../components/Carousel.vue";

const res = await fetch('https://rickandmortyapi.com/api/character');
const { results: characters } = await res.json();
---

<EmptyLayout>
  <Slide>
    <div slot="title">Demo</div>
    <div slot="content" class="flex gap-9">
      <div class=" text-7xl">Demo</div>
    </div>
  </Slide>
  <div class=" w-full flex flex-wrap">
    {
      characters.map(character => (
        <div class="w-full md:w-1/2 lg:w-1/3 p-2">
          <Character character={character}/>
        </div>
      ))
    }
  </div>
  <div class=" flex m-24">
    <Carousel client:visible={{rootMargin: "600px"}}></Carousel>
  </div>
</EmptyLayout>
